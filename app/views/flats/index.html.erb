<div class="container mt-4">
  <h1 class="mb-4">Tous nos Appartements</h1>

  <%= link_to "Ajouter un nouvel appartement", new_flat_path, class: "btn btn-success mb-3" %>

  <div class="row">
    <% @flats.each do |flat| %>
      <div class="col-12 col-md-6 col-lg-4 mb-4">
        <div class="card shadow-sm">
          <% if flat.picture_url.present? %>
            <%= image_tag flat.picture_url, class: "card-img-top", style: "height: 200px; object-fit: cover;" %>
          <% else %>
            <%= image_tag "https://picsum.photos/400/200", class: "card-img-top", style: "height: 200px; object-fit: cover;" %>
          <% end %>
          <div class="card-body">
            <h5 class="card-title"><%= flat.name %></h5>
            <p class="card-text text-muted"><i class="fas fa-map-marker-alt"></i> <%= flat.address %></p>
            <div class="d-flex justify-content-between align-items-center mb-3">
              <small class="text-muted"><i class="fas fa-users"></i> <%= flat.number_of_guests %> guests</small>
              <small class="text-muted"><i class="fas fa-dollar-sign"></i> <%= flat.price_per_night %> / night</small>
            </div>
            <div class="d-flex gap-2"> <%= link_to "Voir les détails", flat_path(flat), class: "btn btn-primary btn-sm" %>
              <%= link_to "Modifier", edit_flat_path(flat), class: "btn btn-warning btn-sm" %>
              <%= link_to "Supprimer", flat_path(flat), data: { turbo_method: :delete, turbo_confirm: "Êtes-vous sûr de vouloir supprimer cet appartement ?" }, class: "btn btn-danger btn-sm" %>
            </div>
          </div> </div> </div> <% end %>
  </div>
</div>
